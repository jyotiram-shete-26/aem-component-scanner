{
  "manifest_version": 3,
  "name": "AEM Component Scanner",
  "version": "1.2",
  "description": "Scan the current AEM page and list all components used, with an interactive popup UI.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Scan AEM Components",
    "default_icon": {
      "128": "icon128.png"
    },
    "default_popup": "index.html"
  }
}